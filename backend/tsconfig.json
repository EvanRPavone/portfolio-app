{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,        // ✅ For better interop
    "declaration": false                         // ✅ Skip generating .d.ts on Heroku
  },
  "include": [
    "index.ts",
    "controllers/**/*",
    "routes/**/*",
    "services/**/*",
    "config/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
